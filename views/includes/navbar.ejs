<style>
  /* === Base Styles === */
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1.25rem;
    font-size: 1rem;
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1.25rem;
    transition: background-color 0.2s ease-in-out;
  }

  .search-btn:hover {
    background-color: #ff5a5f;
    color: #fff;
  }

  /* === Responsive (Mobile) === */
  @media (max-width: 768px) {
    .navbar-nav {
      text-align: center;
    }

    .search-form {
      flex-direction: column;
      align-items: stretch;
      gap: 0.5rem;
      width: 100%;
      margin-top: 0.5rem;
    }

    .search-inp,
    .search-btn {
      width: 100%;
      font-size: 0.95rem;
    }
  }
  .logo {
    font-size: 1.4rem;
  }
</style>

<nav class="navbar navbar-expand-md bg-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold text-danger logo" href="/listings">
      <i class="fa-regular fa-compass me-1 logo-design"></i>Wanderlust
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav mx-auto">
        <form class="d-flex search-form" role="search">
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search destinations"
            aria-label="Search"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass me-1"></i> Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto align-items-center">
        <a class="nav-link" href="/listings/new"><b>üè° List your stay</b></a>

        <% if (!currUser) { %>
        <a class="nav-link fw-semibold" href="/signup">Sign up</a>
        <a class="nav-link fw-semibold" href="/login">Log in</a>
        <% } %> <% if (currUser) { %>
        <a class="nav-link fw-semibold" href="/logout">Log out</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

