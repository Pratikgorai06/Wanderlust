<% layout("layouts/boilerplate") %>

<!-- <h3>All Listings</h3> -->
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  } /* --- Container for entire bar --- */
  .filters-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    position: relative;
    margin-bottom: 1rem;
  }

  /* --- Scrollable filter section --- */
  .filters-wrapper {
    position: relative;
    flex: 1;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  /* Scrollable content */
  #filters {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    gap: 2rem;
    padding: 1rem 3rem; /* space for arrows */
    scrollbar-width: none; /* Firefox */
  }
  #filters::-webkit-scrollbar {
    display: none; /* Chrome, Safari */
  }

  /* Individual filter items */
  .filter {
    flex: 0 0 auto;
    text-align: center;
    opacity: 0.7;
    transition: opacity 0.2s, transform 0.2s;
  }
  .filter:hover {
    opacity: 1;
    transform: scale(1.05);
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
    margin-top: 0.25rem;
  }

  /* --- Tax toggle aligned right --- */
  .tax-toggle {
    flex: 0 0 auto;
    border: 1px solid #ccc;
    border-radius: 1rem;
    height: 3rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
    background-color: #fff;
  }

  /* --- Scroll arrows --- */
  .scroll-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    background: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
  }
  .scroll-btn:hover {
    background: #f5f5f5;
  }
  .scroll-btn.left {
    left: 0.5rem;
  }
  .scroll-btn.right {
    right: 0.5rem;
  }

  /* --- Fade edges like Airbnb --- */
  .filters-wrapper::before,
  .filters-wrapper::after {
    content: "";
    position: absolute;
    top: 0;
    width: 50px;
    height: 100%;
    z-index: 5;
    pointer-events: none;
  }
  .filters-wrapper::before {
    left: 0;
    background: linear-gradient(to right, white 60%, transparent);
  }
  .filters-wrapper::after {
    right: 0;
    background: linear-gradient(to left, white 60%, transparent);
  }
</style>
<div class="filters-bar">
  <div class="filters-wrapper">
    <button class="scroll-btn left" id="scrollLeft">
      <i class="fa-solid fa-chevron-left"></i>
    </button>

    <div id="filters">
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountain</p>
      </div>
      <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Pools</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-cow"></i>
        <p>Farms</p>
      </div>
      <div class="filter">
        <i class="fa-regular fa-snowflake"></i>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-igloo"></i>
        <p>Domes</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-ship"></i>
        <p>Boats</p>
      </div>
    </div>

    <button class="scroll-btn right" id="scrollRight">
      <i class="fa-solid fa-chevron-right"></i>
    </button>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault">
        Display Total After Taxes
      </label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %> </b> <br />
          &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") :
          "N/A" %> /night
          <i class="tax-info">&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
<script>
  const filters = document.getElementById("filters");
  document.getElementById("scrollLeft").onclick = () =>
    filters.scrollBy({ left: -300, behavior: "smooth" });
  document.getElementById("scrollRight").onclick = () =>
    filters.scrollBy({ left: 300, behavior: "smooth" });
</script>
