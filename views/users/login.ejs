<%layout("/layouts/boilerplate")%>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Poppins", sans-serif;
    background-color: #f9f9fb;
  }

  h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.75rem;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .form-group input {
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 8px;
    transition: border-color 0.3s ease;
  }

  .form-group input:focus {
    outline: none;
    border-color: #472dbb;
    box-shadow: 0 0 4px rgba(71, 45, 187, 0.3);
  }

  .signup-wrapper {
    width: 100%;
    max-width: 400px;
    background: #fff;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .page-container {
    min-height: 75vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .submit-btn {
    display: block;
    width: 100%;
    padding: 0.75rem;
    background-color: #472dbb;
    color: #fff;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 500;
    font-size: 1rem;
    transition: background 0.3s ease;
  }

  .submit-btn:hover {
    background-color: #3a25a0;
  }

  p {
    margin-top: 1rem;
    text-align: center;
    font-size: 0.95rem;
  }

  p a {
    color: #472dbb;
    font-weight: 600;
    text-decoration: none;
  }

  p a:hover {
    text-decoration: underline;
  }

  @media (max-width: 576px) {
    .signup-wrapper {
      padding: 1.5rem;
      max-width: 90%;
    }

    h2 {
      font-size: 1.5rem;
    }

    .form-group input {
      font-size: 0.95rem;
    }

    .submit-btn {
      font-size: 0.95rem;
      padding: 0.65rem;
    }
  }
</style>

<div class="page-container">
  <div class="signup-wrapper">
    <h2>Welcome Back!</h2>
    <form action="/login" method="post">
      <div class="form-group">
        <label for="name">Username:</label>
        <input
          type="text"
          id="name"
          name="username"
          placeholder="Enter Your Name"
          required
          autocomplete="off"
        />
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter Your Password"
        />
      </div>
      <button type="submit" class="submit-btn">Login</button>
    </form>
    <p>Don't have an account? <a href="/signup">Signup</a></p>
  </div>
</div>
